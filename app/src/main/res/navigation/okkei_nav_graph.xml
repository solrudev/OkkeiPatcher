<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/okkei_nav_graph"
	app:startDestination="@id/home_fragment">

	<fragment
		android:id="@+id/home_fragment"
		android:name="ru.solrudev.okkeipatcher.ui.fragment.HomeFragment"
		android:label="@string/app_name"
		tools:layout="@layout/fragment_home">
		<action
			android:id="@+id/action_homeFragment_to_patchFragment"
			app:destination="@id/patch_fragment" />
		<action
			android:id="@+id/action_homeFragment_to_restoreFragment"
			app:destination="@id/restore_fragment" />
		<action
			android:id="@+id/action_homeFragment_to_settingsFragment"
			app:destination="@id/settings_fragment" />
	</fragment>
	<fragment
		android:id="@+id/patch_fragment"
		android:name="ru.solrudev.okkeipatcher.ui.fragment.PatchFragment"
		android:label="@string/patch"
		tools:layout="@layout/fragment_work" />
	<fragment
		android:id="@+id/restore_fragment"
		android:name="ru.solrudev.okkeipatcher.ui.fragment.RestoreFragment"
		android:label="@string/restoring"
		tools:layout="@layout/fragment_work" />
	<fragment
		android:id="@+id/settings_fragment"
		android:name="ru.solrudev.okkeipatcher.ui.fragment.SettingsFragment"
		android:label="@string/settings">
		<action
			android:id="@+id/action_settingsFragment_to_aboutFragment"
			app:destination="@id/about_fragment" />
	</fragment>
	<fragment
		android:id="@+id/about_fragment"
		android:name="ru.solrudev.okkeipatcher.ui.fragment.AboutFragment"
		android:label="@string/preference_about_title"
		tools:layout="@layout/fragment_about" />
</navigation>