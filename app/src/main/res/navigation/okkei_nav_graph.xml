<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/okkei_nav_graph"
	app:startDestination="@id/home_fragment">

	<action
		android:id="@+id/action_global_permissions"
		app:destination="@id/permissions_fragment" />
	<action
		android:id="@+id/action_global_work"
		app:destination="@id/work_fragment" />
	<action
		android:id="@+id/action_global_settings"
		app:destination="@id/settings_fragment" />

	<fragment
		android:id="@+id/home_fragment"
		android:name="ru.solrudev.okkeipatcher.ui.screen.home.HomeFragment"
		android:label="@string/app_name"
		tools:layout="@layout/fragment_home" />
	<fragment
		android:id="@+id/permissions_fragment"
		android:name="ru.solrudev.okkeipatcher.ui.screen.permissions.PermissionsFragment"
		android:label="@string/permissions_screen_title"
		tools:layout="@layout/fragment_permissions" />
	<fragment
		android:id="@+id/work_fragment"
		android:name="ru.solrudev.okkeipatcher.ui.screen.work.WorkFragment"
		tools:layout="@layout/fragment_work">
		<argument
			android:name="work"
			app:argType="ru.solrudev.okkeipatcher.domain.model.Work" />
	</fragment>
	<fragment
		android:id="@+id/settings_fragment"
		android:name="ru.solrudev.okkeipatcher.ui.screen.settings.SettingsFragment"
		android:label="@string/settings">
		<action
			android:id="@+id/action_settingsFragment_to_saveDataAccessFragment"
			app:destination="@id/save_data_access_fragment" />
		<action
			android:id="@+id/action_settingsFragment_to_clearDataFragment"
			app:destination="@id/clear_data_fragment" />
		<action
			android:id="@+id/action_settingsFragment_to_aboutFragment"
			app:destination="@id/about_fragment" />
	</fragment>
	<fragment
		android:id="@+id/about_fragment"
		android:name="ru.solrudev.okkeipatcher.ui.screen.about.AboutFragment"
		android:label="@string/preference_about_title"
		tools:layout="@layout/fragment_about" />

	<dialog
		android:id="@+id/save_data_access_fragment"
		android:name="ru.solrudev.okkeipatcher.ui.screen.settings.savedataaccess.SaveDataAccessFragment"
		android:label="@string/permission_save_data_access_title" />
	<dialog
		android:id="@+id/clear_data_fragment"
		android:name="ru.solrudev.okkeipatcher.ui.screen.settings.cleardata.ClearDataFragment"
		android:label="@string/warning_clear_data_title" />
</navigation>