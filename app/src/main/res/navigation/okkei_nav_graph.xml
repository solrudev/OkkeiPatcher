<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/okkei_nav_graph"
	app:startDestination="@id/home_fragment">

	<include app:graph="@navigation/settings_nav_graph" />

	<action
		app:enterAnim="@anim/nav_default_enter_anim"
		app:exitAnim="@anim/nav_default_exit_anim"
		app:popEnterAnim="@anim/nav_default_pop_enter_anim"
		app:popExitAnim="@anim/nav_default_pop_exit_anim"
		android:id="@+id/action_global_permissions"
		app:destination="@id/permissions_fragment" />
	<action
		app:enterAnim="@anim/nav_default_enter_anim"
		app:exitAnim="@anim/nav_default_exit_anim"
		app:popEnterAnim="@anim/nav_default_pop_enter_anim"
		app:popExitAnim="@anim/nav_default_pop_exit_anim"
		android:id="@+id/action_global_work"
		app:destination="@id/work_fragment" />
	<action
		android:id="@+id/action_global_settings"
		app:destination="@id/settings_nav_graph" />

	<fragment
		android:id="@+id/home_fragment"
		android:name="ru.solrudev.okkeipatcher.ui.screen.home.HomeFragment"
		android:label="@string/app_name"
		tools:layout="@layout/fragment_home" />
	<fragment
		android:id="@+id/update_fragment"
		android:name="ru.solrudev.okkeipatcher.ui.screen.update.UpdateFragment"
		android:label="@string/update"
		tools:layout="@layout/fragment_update" />
	<fragment
		android:id="@+id/permissions_fragment"
		android:name="ru.solrudev.okkeipatcher.ui.screen.permissions.PermissionsFragment"
		android:label="@string/permissions_screen_title"
		tools:layout="@layout/fragment_permissions" />
	<fragment
		android:id="@+id/work_fragment"
		android:name="ru.solrudev.okkeipatcher.ui.screen.work.WorkFragment"
		tools:layout="@layout/fragment_work">
		<argument
			android:name="work"
			app:argType="ru.solrudev.okkeipatcher.domain.model.Work" />
	</fragment>
</navigation>