<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/container_work"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true">

	<com.google.android.material.appbar.AppBarLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:fitsSystemWindows="true">

		<com.google.android.material.appbar.MaterialToolbar
			android:id="@+id/toolbar_work"
			android:layout_width="match_parent"
			android:layout_height="?actionBarSize" />

	</com.google.android.material.appbar.AppBarLayout>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:paddingHorizontal="@dimen/content_padding"
		android:paddingTop="@dimen/content_padding"
		android:paddingBottom="32dp"
		app:layout_behavior="@string/appbar_scrolling_view_behavior">

		<ImageView
			android:id="@+id/imageview_work_okkei"
			android:layout_width="0dp"
			android:layout_height="150dp"
			android:importantForAccessibility="no"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:srcCompat="@drawable/okkei" />

		<Button
			android:id="@+id/button_work"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="@string/button_text_abort_process"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent" />

		<TextView
			android:id="@+id/textview_work_status"
			android:layout_width="wrap_content"
			android:layout_height="0dp"
			android:layout_marginBottom="8dp"
			android:textAlignment="viewStart"
			app:layout_constraintBottom_toTopOf="@id/progressbar_work"
			app:layout_constraintStart_toStartOf="@id/progressbar_work" />

		<TextView
			android:id="@+id/textview_work_percent_done"
			android:layout_width="wrap_content"
			android:layout_height="0dp"
			android:layout_marginBottom="8dp"
			android:textAlignment="viewEnd"
			app:layout_constraintBottom_toTopOf="@id/progressbar_work"
			app:layout_constraintEnd_toEndOf="@id/progressbar_work" />

		<com.google.android.material.progressindicator.LinearProgressIndicator
			android:id="@+id/progressbar_work"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toTopOf="@id/button_work"
			app:layout_constraintEnd_toEndOf="@id/button_work"
			app:layout_constraintStart_toStartOf="@id/button_work" />

	</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>