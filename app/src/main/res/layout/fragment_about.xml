<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/container_about"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fillViewport="true">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center"
		android:orientation="vertical">

		<ImageView
			android:id="@+id/imageview_about_app_icon"
			android:layout_width="@dimen/about_icon_app_size"
			android:layout_height="@dimen/about_icon_app_size"
			android:layout_marginBottom="@dimen/about_screen_icon_margin"
			android:importantForAccessibility="no"
			app:srcCompat="@mipmap/ic_launcher" />

		<TextView
			android:id="@+id/textview_about_app_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/about_screen_elements_margin"
			android:text="@string/app_name"
			android:textAppearance="?textAppearanceHeadlineSmall" />

		<TextView
			android:id="@+id/textview_about_version"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/about_screen_version"
			android:textAlignment="center"
			android:textAppearance="?textAppearanceSecondary" />

		<Button
			android:id="@+id/button_about_source_code"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/button_margin_vertical"
			android:text="@string/button_text_source_code" />

	</LinearLayout>
</androidx.core.widget.NestedScrollView>