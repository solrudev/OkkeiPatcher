<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:clipToPadding="false"
		android:paddingVertical="@dimen/card_margin_vertical"
		android:orientation="vertical">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginHorizontal="@dimen/card_margin_horizontal"
			android:layout_marginVertical="@dimen/card_margin_vertical"
			android:text="@string/card_game_title"
			android:textAppearance="?textAppearanceHeadline6" />

		<include layout="@layout/card_game_info" />

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginHorizontal="@dimen/card_margin_horizontal"
			android:layout_marginTop="@dimen/content_category_margin"
			android:layout_marginBottom="@dimen/card_margin_vertical"
			android:text="@string/card_actions_title"
			android:textAppearance="?textAppearanceHeadline6" />

		<include layout="@layout/card_actions" />

		<include layout="@layout/card_patch_status" />

	</LinearLayout>
</androidx.core.widget.NestedScrollView>