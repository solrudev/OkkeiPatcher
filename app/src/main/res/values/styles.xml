<resources>

	<style name="Widget.OkkeiPatcher.CardView" parent="Widget.Material3.CardView.Elevated">
		<item name="cardElevation">@dimen/card_elevated_elevation</item>
		<item name="shapeAppearance">?shapeAppearanceCornerLarge</item>
	</style>

	<style name="Widget.OkkeiPatcher.Button.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
		<item name="android:insetTop">0dp</item>
		<item name="android:insetBottom">0dp</item>
		<item name="strokeColor">@color/button_outline_color_selector</item>
		<item name="backgroundTint">@color/text_button_background_color_selector</item>
		<item name="android:textColor">@color/text_button_foreground_color_selector</item>
		<item name="iconTint">@color/text_button_foreground_color_selector</item>
		<item name="rippleColor">?colorRippleOutlined</item>
	</style>

	<style name="Widget.OkkeiPatcher.Button.UnelevatedButton" parent="Widget.Material3.Button.UnelevatedButton">
		<item name="android:insetTop">0dp</item>
		<item name="android:insetBottom">0dp</item>
		<item name="backgroundTint">@color/button_background_color_selector</item>
		<item name="android:textColor">@color/button_content_color_selector</item>
		<item name="iconTint">@color/button_content_color_selector</item>.
		<item name="rippleColor">?colorRippleFilled</item>
	</style>

	<style name="Base.Widget.OkkeiPatcher.Toolbar.Light" parent="Widget.Material3.Toolbar">
		<item name="materialThemeOverlay">@style/ThemeOverlay.OkkeiPatcher.Toolbar.Light</item>
		<item name="titleTextColor">?colorOnPrimary</item>
		<item name="subtitleTextColor">?colorOnPrimary</item>
		<item name="navigationIconTint">?colorOnPrimary</item>
	</style>

	<style name="Base.Widget.OkkeiPatcher.Toolbar" parent="Base.Widget.OkkeiPatcher.Toolbar.Light"/>
	<style name="Widget.OkkeiPatcher.Toolbar" parent="Base.Widget.OkkeiPatcher.Toolbar"/>

	<style name="Base.Widget.OkkeiPatcher.AppBarLayout.Light" parent="Widget.Material3.AppBarLayout">
		<item name="android:background">?colorPrimary</item>
	</style>

	<style name="Base.Widget.OkkeiPatcher.AppBarLayout" parent="Base.Widget.OkkeiPatcher.AppBarLayout.Light"/>
	<style name="Widget.OkkeiPatcher.AppBarLayout" parent="Base.Widget.OkkeiPatcher.AppBarLayout"/>

	<style name="Widget.OkkeiPatcher.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
		<item name="itemTextColor">@color/navigation_item_label_color_selector</item>
		<item name="itemTextAppearanceActive">@style/TextAppearance.OkkeiPatcher.BodySmallBold</item>
		<item name="itemTextAppearanceInactive">@style/TextAppearance.OkkeiPatcher.BodySmallBold</item>
	</style>

	<style name="Widget.OkkeiPatcher.NavigationRailView" parent="Widget.Material3.NavigationRailView">
		<item name="itemTextColor">@color/navigation_item_label_color_selector</item>
		<item name="itemTextAppearanceActive">@style/TextAppearance.OkkeiPatcher.BodySmallBold</item>
		<item name="itemTextAppearanceInactive">@style/TextAppearance.OkkeiPatcher.BodySmallBold</item>
	</style>

	<style name="Widget.OkkeiPatcher.NavigationView" parent="Widget.Material3.NavigationView">
		<item name="itemTextAppearance">@style/TextAppearance.OkkeiPatcher.BodySmallBold</item>
	</style>

	<style name="Widget.OkkeiPatcher.LinearProgressIndicator" parent="Widget.Material3.LinearProgressIndicator">
		<item name="trackThickness">@dimen/linear_progress_indicator_track_thickness</item>
		<item name="trackCornerRadius">@dimen/linear_progress_indicator_track_thickness</item>
	</style>

	<style name="Widget.OkkeiPatcher.CircularProgressIndicator" parent="Widget.Material3.CircularProgressIndicator">
		<item name="indicatorInset">0dp</item>
		<item name="trackColor">?colorSurfaceVariant</item>
	</style>

	<style name="Widget.OkkeiPatcher.CheckedTextView" parent="Widget.Material3.CheckedTextView">
		<item name="android:textColor">?colorSecondaryText</item>
	</style>

	<style name="MaterialAlertDialog.OkkeiPatcher.Body.Text" parent="MaterialAlertDialog.Material3.Body.Text">
		<item name="android:textColor">?colorSecondaryText</item>
	</style>
</resources>