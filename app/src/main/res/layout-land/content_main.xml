<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="fill_parent"
		app:layout_behavior="@string/appbar_scrolling_view_behavior"
		tools:showIn="@layout/activity_main">

		<ImageView
			android:id="@+id/okkeiImage"
			android:layout_width="150dp"
			android:layout_height="125dp"
			android:layout_marginStart="16dp"
			android:layout_marginTop="24dp"
			android:contentDescription="@string/okkei"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.0"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:srcCompat="@drawable/okkei" />

		<Button
			android:id="@+id/patchButton"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="16dp"
			android:layout_marginEnd="5dp"
			android:enabled="@{viewModel.isPatchEnabled}"
			android:onClick="@{() -> activity.onPatchClick()}"
			android:text="@{viewModel.patchText}"
			android:textSize="12sp"
			app:layout_constraintEnd_toStartOf="@+id/restoreButton"
			app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintHorizontal_chainStyle="spread"
			app:layout_constraintStart_toEndOf="@+id/okkeiImage"
			app:layout_constraintTop_toTopOf="@+id/okkeiImage" />

		<Button
			android:id="@+id/restoreButton"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="5dp"
			android:layout_marginEnd="16dp"
			android:enabled="@{viewModel.isRestoreEnabled}"
			android:onClick="@{() -> activity.onRestoreClick()}"
			android:text="@{viewModel.restoreText}"
			android:textSize="12sp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintStart_toEndOf="@+id/patchButton"
			app:layout_constraintTop_toTopOf="@+id/patchButton" />

		<Button
			android:id="@+id/clearDataButton"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:enabled="@{viewModel.isClearDataEnabled}"
			android:onClick="@{() -> activity.onClearDataClick()}"
			android:text="@string/clear_data"
			android:textSize="12sp"
			app:layout_constraintEnd_toEndOf="@+id/restoreButton"
			app:layout_constraintHorizontal_bias="0.0"
			app:layout_constraintStart_toStartOf="@+id/patchButton"
			app:layout_constraintTop_toBottomOf="@+id/patchButton" />

		<CheckBox
			android:id="@+id/saveDataCheckBox"
			android:layout_width="wrap_content"
			android:layout_height="0dp"
			android:layout_marginStart="8dp"
			android:checked="@={viewModel.processSaveDataEnabled}"
			android:onClick="@{activity::onProcessSaveDataClick}"
			android:text="@string/checkbox_save_data"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.0"
			app:layout_constraintStart_toEndOf="@+id/okkeiImage"
			app:layout_constraintTop_toBottomOf="@+id/clearDataButton" />

		<TextView
			android:id="@+id/statusText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="24dp"
			android:text="@{viewModel.status}"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/saveDataCheckBox" />

		<ProgressBar
			android:id="@+id/progressBar"
			style="?android:attr/progressBarStyleHorizontal"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="10dp"
			android:layout_marginEnd="10dp"
			android:indeterminate="@{viewModel.isProgressIndeterminate}"
			android:max="@{viewModel.progressMax}"
			android:progress="@{viewModel.progress}"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.0"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/statusText"
			app:layout_constraintVertical_bias="0.0" />
	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>